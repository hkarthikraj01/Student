
@model Student.Models.StudentList
@{

    var title = "Create Student";
}


<form method="post">
    <div class="row p-3 border">
        @if (Model.Id != 0)
        {
            title = "Edit Student";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 pt-4">
            <div class="form-group row m-3">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-3">
                <div class="col-4">
                    <label asp-for="RegisterNo">Roll Number</label>
                </div>
                <div class="col-8">
                    <input asp-for="RegisterNo" class="form-control" />
                    <span asp-validation-for="RegisterNo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-3">
                <div class="col-4">
                    <label asp-for="Department">Class Studying</label>
                </div>
                <div class="col-8">
                    <input asp-for="Department" class="form-control" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
            </div>
           
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}